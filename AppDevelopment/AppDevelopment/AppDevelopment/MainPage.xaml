<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDevelopment.MainPage">

    <StackLayout>
        
        <Frame BackgroundColor="#00FBFF" Padding="55" CornerRadius="0">
            <Label Text="Mark Tamagochi" HorizontalTextAlignment="Center" TextColor="White" FontSize="Title">
                
            </Label>
        </Frame>
        <Frame BackgroundColor="Purple" Padding="80" CornerRadius="0">
            <Label Text="Welkom"  Padding="30,-10,30,10" HorizontalTextAlignment="Center" TextColor="White" FontSize="Title">

            </Label>
        </Frame>
        <Frame BackgroundColor="Firebrick" Padding="80" CornerRadius="0">
            <Label Text="About:                                   In dit spel moet je Mark Rutte voederen en levend houden en plezier bieden."  Padding="30,-10,30,10" HorizontalTextAlignment="Center" TextColor="White" FontSize="Title">
             
            </Label>
           
                
        </Frame>
     
        <Button Text="Play"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Clicked= "OnButtonClicked" />

    </StackLayout>

</ContentPage>
